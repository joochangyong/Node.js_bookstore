  <!-- //--------------카드정보--------------// -->
  <h1 class="form-signin-heading" style="margin-left: 4%;"><%= UName %>님 마이페이지</h1>
  <h1 class="form-signin-heading" style="margin-left: 4%;">등급 : <%= totalprice[0].rating%></h1>
  <div style="width: 40%; float: left;">
    <form class="form-signin" method="post" action="/mypage/card">
      <a href="/basket" class="btn btn-outline-primary" style="font-size: 30px; margin-left: 10%; margin-left: 10%; color: white; background-color: #222222;" >장바구니</a>
      <h2 class="form-signin-heading" style="margin-left: 10%;"> 카드등록</h2>
      <li style="margin-left: 10%;">카드종류</li><input type="text" name="Kinds" class="form-control"
        style="margin-left: 10%;" placeholder="xx은행">
      <li style="margin-left: 10%;">카드번호</li><input type="text" name="CardNum" class="form-control"
        style="margin-left: 10%;" placeholder="xxxx-xxxx-xxxx-xxxx">
      <li style="margin-left: 10%;">유효기간</li><input type="text" name="Validity" class="form-control"
        style="margin-left: 10%;" placeholder="xx/xx">
      <div class="checkbox">
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-left: 10%; color: white; background-color: #222222;">등록</button>
    </form>
  </div>
  <button disabled class="" style="background-color: white;  border:white; color: black; font-size: 250%; margin-left: 9.5%;">카드목록</button>
  <div style="width: 40%; height: 40%; float: right; margin-right: 10%; margin-top: 1%; border:black solid thin; ">
    <form class="form-signin" method="post" action="/mypage/card">
      <table>
        <tr style="font-size: 130%;">
          <td style="width: 25%;"> 카드 </td>
          <td style="width: 25%;"> 카드번호 </td>
          <td style="width: 20%;"> 유효기간 </td>
        </tr>
        <tr>
          <% for(var i = 0; i < card.length; i++){%>
          <td> <%= card[i].Kinds %> </td>
          <td> <%= card[i].CardNum %> </td>
          <td> <%= card[i].Validity %> </td>
          <td> <a href="/delete/<%=card[i].CardNum%>" style="border: 1px solid white;color: white; background-color: #222222;" class="btn btn-outline-primary">삭제</a> </td>
        </tr>
        <%} %>

      </table>
    </form>

  </div>

  <!-- //--------------배송지--------------// -->
  <div style="width: 40%;">
    <form class="form-signin" method="post" action="/mypage/address">
      <h2 class="form-signin-heading" style="margin-left: 10%;">주소등록</h2>
      <li style="margin-left: 10%;">우편번호</li><input type="Zipcode" name="Zipcode" class="form-control"
        style="margin-left: 10%;" placeholder="xxx-x">
      <li style="margin-left: 10%;">기본주소</li><input type="PriAddress" name="PriAddress" class="form-control"
        style="margin-left: 10%;" placeholder="시/구/동">
      <li style="margin-left: 10%;">상세주소</li><input type="DetAddress" name="DetAddress" class="form-control"
        style="margin-left: 10%;" placeholder="상세주소">
      <div class="checkbox">
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-left: 10%; color: white; background-color: #222222;">등록</button>
    </form>
  </div>
  <div style="width: 40%; margin-right: 10%; position:absolute; left: 50%; top: 60%; border:black solid thin">
    <form class="form-signin" method="post" action="/mypage/address">
      <table>
        <tr>
          <td style="font-size: 220%; width: 40%">
            주소
          </td>
        </tr>
        <tr style="font-size: 130%;">
          <td style="width: 20%;"> 우편번호 </td>
          <td style="width: 25%;"> 기본주소 </td>
          <td style="width: 20%;"> 상세주소 </td>
        </tr>
        <tr>
          <% if(address == null){ %>
          <% }else{%>
          <% for(var i = 0; i < address.length; i++){%>
          <td> <%= address[i].Zipcode %> </td>
          <td> <%= address[i].PriAddress %> </td>
          <td> <%= address[i].DetAddress %> </td>
          <td> <a href="/delete1/<%=address[i].AddressNum%>" style="border: 1px solid white; color: white; background-color: #222222;" class="btn btn-outline-primary">삭제</a> </td>
        </tr>
        <% } %>
        <% } %>
      </table>
    </form>
  </div>
  <button disabled class="" style="background-color: white;  border:white; color: black; font-size: 250%; margin-left: 9.5%;">주문내역</button>
  <button disabled class="" style="background-color: white;  border:white; color: black; font-size: 250%; margin-left: 25%;">총 주문금액 : <%= totalprice[0].totalprice%>원</button>

  <form class="form-signin" method="get" action="/mypage">
    <table style="border: 1px solid black ; width: 1000px; margin-left: 10%; margin-bottom: 10%">
      <tr style="font-size: 130%;">
        <td> 주문날짜 </td>
        <td> 배송지 </td>
        <td> 책제목 </td>
        <td> 수량 </td>
        <td> 가격 </td>
      </tr>
      <% for(var i = 0; i < searchorders.length; i++){%>
      <tr>
        <td> <%= searchorders[i].orderDate %> </td>
        <td> <%= searchorders[i].Address %> </td>
        <td> <%= searchorders[i].BookName %> </td>
        <td> <%= searchorders[i].Count %> </td>
        <td> <%= searchorders[i].orderSum %> </td>
      </tr>
      <% } %>

    </table>
  </form>
  <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
  <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
</body>

